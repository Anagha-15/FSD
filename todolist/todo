        body { font-family: 'Arial', sans-serif; background-color: #f0f2f5; display: flex; flex-direction: column; align-items: center; padding: 50px; }
        .card { background: white; padding: 30px; border-radius: 15px; box-shadow: 0 8px 20px rgba(0,0,0,0.1); width: 350px; }
        h2 { color: #333; margin-bottom: 20px; text-align: center; }
        .input-group { display: flex; gap: 10px; margin-bottom: 20px; }
        input[type="text"] { flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 8px; outline: none; }
        button { background: #007bff; color: white; border: none; padding: 10px 15px; border-radius: 8px; cursor: pointer; font-weight: bold; }
        button:hover { background: #0056b3; } 
        ul { list-style: none; padding: 0; }
        li { display: flex; align-items: center; padding: 12px 0; border-bottom: 1px solid #eee; }
        input[type="checkbox"] { margin-right: 15px; width: 18px; height: 18px; cursor: pointer; }

        input[type="checkbox"]:checked + span { text-decoration: line-through; color: #888; }
        span { font-size: 16px; color: #444; }
    </style>
