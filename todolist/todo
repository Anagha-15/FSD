<body>
    <div class="card">
        <h2>My To-Do List</h2>
        <div class="input-group">
            <input type="text" id="taskInput" placeholder="Type a task...">
            <button onclick="
                let val = document.getElementById('taskInput').value;
                if(val.trim() !== '') {
                    let li = document.createElement('li');
                    li.innerHTML = '<input type=&quot;checkbox&quot;> <span>' + val + '</span>';
                    document.getElementById('todoList').appendChild(li);
                    document.getElementById('taskInput').value = '';
                }
            ">Add</button>
        </div>
        <ul id="todoList">     
        </ul>
    </div>

</body>
